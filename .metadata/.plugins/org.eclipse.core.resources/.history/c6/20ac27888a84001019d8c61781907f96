package com.aclass.test.run;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Scanner;

public class TestRun {

	public static void main(String[] args) {
		// JDBC 맛보기
		/*
		 * 1. DBeaver 실행(클라이언트 프로그램 실행)
		 * 
		 * 2. 접속하기 누름
		 * 
		 * 3. DBMS 선택
		 * 
		 * 4. ojdbc.jar --> 등록    ※ 커넥션 안돼서 선생님이 보내주신 자료
		 * 
		 * 5. IP주소, PORT번호, 사용자계정, 비밀번호 연결
		 * 
		 * 6. 새 SQL편집기
		 * 
		 * 7. INSERT문 작성 => INSERT INTO 테이블명 VALUES('값', '값', '값);
		 * 
		 * 8. SQL문을 실행
		 * 
		 * 9. UpdatedRows : 1      <= 결과가 이렇게 나온다구요.
		 * 
		 * 10. COMMIT;
		 */
		// 0) 필요한 변수 세팅
		Connection conn = null;			// 2~4번 역할
		Statement stmt = null;			// 6~8번 역할
		int result = 0;					// 9번 실행결과를 받아줄 건데 결과값이 정수로 오니까 int로 받아줍시다.
		
		// 사용자로부터 값을 입력받아서 DBMS로 전달 => 테이블에 INSERT
		Scanner sc = new Scanner(System.in);
		
		System.out.print("번호를 입력해주세요. > ");
		int num = sc.nextInt();
		sc.nextLine();
		System.out.print("이름을 입력해주세요. > ");
		String name = sc.nextLine();
		
		// 실행할 SQL문(완성된 형태로 만들어주기)
		String sql = "INSERT INTO TB_STUDENT VALUES(1, '홍길동', SYSDATE)";
		sql = "INSERT INTO TB_STUDENT VALUES(" + num + ", '"+ name + "', SYSDATE)";
//      여기까지 준비단계였습니다. 이제 "2. 접속하기 누름"을 해야해요.
		
		try {
			// 1) JDBC Drive 등록 -> ojdbc.jar
			// Driver 등록은 프로그램 실행 시 딱 1회만 하면 된다.
			Class.forName("oracle.jdbc.driver.OracleDriver");
			System.out.println("Driver등록 성공!");

			// 2) DB서버와의 연결(IP주소, PORT번호, 사용자이름, 비밀번호)
			conn = DriverManager.getConnection("jdbc:oracle:thin:@115.90.212.20:10000:XE", "KYK03", "KYK031234"); // URL은 직접 DBMS 사이트 들어가서 확인하셔야하고 우리는 끝날 때까지 이렇게 쓰면 됩니다.
			System.out.println("DB서버 접속 성공!");
			
			conn.setAutoCommit(false);			// 나 오토커밋 안할래! (직접커밋맛을 봐야지^~^)
			
			// 3) 새 SQL편집기 열기
			stmt = conn.createStatement();
			System.out.println("Statement 객체 생성!");
			
			// 4) SQL문 실행
			// Updated Rows : N 
			// Updated Rows : N
			// Updated Rows : N
			// DML(INSERT, UPDATE, DELETE) => 처리된 행의 개수
			// executeUpdate(DML문) : int (반환타입)
			result = stmt.executeUpdate(sql);
			System.out.println("SQL문 실행 성공!");
			
			// 5) 트랜잭션처리
			if(result > 0) { // INSERT에 성공했을 경우
				conn.commit();
				System.out.println("얏호 커밋 성공!");
			}
			
			
		} catch(ClassNotFoundException e) {
			e.printStackTrace(); // 프로젝트에 OJDBC 추가했나요?
			System.out.println("내꺼 기준 무조건 56행이 문제"); // 추가했는데도 뜬다? 무조건 56행 오탈자
		} catch(SQLException e) {
			e.printStackTrace();
			System.out.println("사용자이름/비밀번호 부적합 -> 내꺼 기준 60행 ID/PWD 문제 ");
			System.out.println("부적합한 Oracle URL이 지정되었습니다. -> 내꺼 기준 60행 URL 오탈자 점검");
		} finally {
			try {
				stmt.close();
				conn.close();
			} catch(SQLException e) {
				e.printStackTrace();
			}
		}
		
	}

}
